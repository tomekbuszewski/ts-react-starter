{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "@config/*": ["./../@config/*"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@decorators": ["./decorators"],
      "@decorators/*": ["./decorators/*"],
      "@redux": ["./redux"],
      "@redux/*": ["./redux/*"],
      "@services": ["./services"],
      "@services/*": ["./services/*"],
      "__mocks__/*": ["./../__mocks__/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "@config/webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
