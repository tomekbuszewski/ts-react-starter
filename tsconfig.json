{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "@config/*": ["./../@config/*"],
      "@components/*": ["./components/*"],
      "@decorators/*": ["./decorators/*"],
      "@services/*": ["./services/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "@config/webpack",
    "jest",
    "src/setupTests.ts"
  ]
}